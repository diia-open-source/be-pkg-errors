{
    "name": "@diia-inhouse/errors",
    "version": "1.6.2",
    "description": "Custom errors",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "author": "Diia",
    "repository": "https://github.com/diia-open-source/be-pkg-errors.git",
    "license": "SEE LICENSE IN LICENSE.md",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "semantic-release": "semantic-release",
        "start": "npm run build && node dist/index.js",
        "lint": "eslint --ext .ts . && prettier --check .",
        "lint-fix": "eslint '*/**/*.{js,ts}' --fix && prettier --write .",
        "prepare": "npm run build",
        "find-circulars": "madge --circular --extensions ts ./",
        "lint:lockfile": "lockfile-lint --path package-lock.json --allowed-hosts registry.npmjs.org --validate-https",
        "test": "jest",
        "test:coverage": "npm run test --coverage --",
        "test:unit": "npm run test --selectProjects unit --"
    },
    "peerDependencies": {
        "@diia-inhouse/types": ">=2.17.0"
    },
    "devDependencies": {
        "@diia-inhouse/configs": "1.26.3",
        "@diia-inhouse/eslint-config": "3.4.0",
        "@diia-inhouse/types": "^5.1.0",
        "@types/jest": "29.5.11",
        "eslint": "8.56.0",
        "eslint-plugin-prettier": "5.1.3",
        "jest": "29.7.0",
        "jest-junit": "16.0.0",
        "lockfile-lint": "4.12.1",
        "madge": "6.1.0",
        "prettier": "3.2.2",
        "rimraf": "5.0.5",
        "semantic-release": "21.1.2",
        "ts-node": "10.9.2",
        "ts-patch": "3.1.1",
        "typescript": "5.3.3",
        "typescript-transform-paths": "3.4.6"
    },
    "release": {
        "extends": "@diia-inhouse/configs/dist/semantic-release/package",
        "branches": [
            "main"
        ]
    },
    "commitlint": {
        "extends": "@diia-inhouse/configs/dist/commitlint"
    },
    "eslintConfig": {
        "extends": "@diia-inhouse/eslint-config",
        "overrides": [
            {
                "files": [
                    "*.ts"
                ],
                "parserOptions": {
                    "project": [
                        "./tsconfig.json",
                        "./tests/tsconfig.json"
                    ]
                }
            }
        ]
    },
    "jest": {
        "preset": "@diia-inhouse/configs/dist/jest"
    },
    "prettier": "@diia-inhouse/eslint-config/prettier",
    "madge": {
        "tsConfig": "./tsconfig.json"
    }
}
